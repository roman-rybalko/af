exim_user = mailnull
exim_group = mail
never_users = root
smtp_banner = mailproc.services.advancedfiltering.net ESMTP
host_lookup = :
rfc1413_hosts = :
rfc1413_query_timeout = 0s
ignore_bounce_errors_after = 2d
timeout_frozen_after = 7d
tls_advertise_hosts = *
tls_certificate = /etc/ssl/${primary_hostname}.crt
tls_privatekey = /etc/ssl/${primary_hostname}.key
tls_verify_hosts = *
tls_verify_certificates = /etc/ssl/ca
tls_crl = /etc/ssl/ca
acl_smtp_rcpt = rcpt_acl

begin acl
rcpt_acl:
  accept  hosts = :
          control = dkim_disable_verify
  deny    message       = Restricted characters in address
          local_parts   = ^[.] : ^.*[@%!/|]
  deny    message       = Restricted characters in address
          local_parts   = ^[./|] : ^.*[@%!] : ^.*/\\.\\./
  require authenticated = *
  require verify = certificate
  require verify = recipient
  accept

begin routers
mailproc_router:
  driver = accept
  local_parts = mailproc
  transport = mailproc_transport
  errors_to = postmaster@hosts.advancedfiltering.net

begin transports
mailproc_transport:
  driver = appendfile
  directory = /usr/local/var/mailproc
  mode = 0660

begin retry
*                      *           F,2h,15m; G,16h,1h,1.5; F,4d,6h

begin rewrite

begin authenticators
gssapi_authenticator:
  public_name = GSSAPI
  driver = cyrus_sasl
  server_set_id = $auth1
