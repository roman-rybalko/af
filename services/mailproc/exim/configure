exim_user = mailnull
exim_group = mail
log_file_path = /usr/local/var/log/exim/%slog
process_log_path = /usr/local/var/spool/exim/exim-process.info
spool_directory = /usr/local/var/spool/exim
never_users = root
smtp_banner = mailproc.services.advancedfiltering.net ESMTP
host_lookup = :
rfc1413_hosts = :
rfc1413_query_timeout = 0s
ignore_bounce_errors_after = 2d
timeout_frozen_after = 7d
tls_advertise_hosts = *
tls_certificate = /etc/ssl/${primary_hostname}.crt
tls_privatekey = /etc/ssl/${primary_hostname}.key
tls_verify_hosts = *
tls_verify_certificates = /etc/ssl/ca
tls_crl = /etc/ssl/ca
acl_smtp_rcpt = rcpt_acl

begin acl
rcpt_acl:
  accept  hosts = :
          control = dkim_disable_verify
  deny    message       = Restricted characters in address
          local_parts   = ^[.] : ^.*[@%!/|]
  deny    message       = Restricted characters in address
          local_parts   = ^[./|] : ^.*[@%!] : ^.*/\\.\\./
  require verify = certificate
  require verify = recipient
  accept

begin routers
mailproc_router:
  driver = accept
  local_parts = mailproc
  transport = mailproc_transport
  errors_to = error@services.advancedfiltering.net
error_router:
  driver = accept
  local_parts = error
  transport = error_transport
  errors_to = ""
bounce_router:
  driver = accept
  local_parts = bounce
  transport = bounce_transport
  errors_to = error@services.advancedfiltering.net

begin transports
mailproc_transport:
  driver = appendfile
  directory = /usr/local/var/spool/advancedfiltering/mailproc
  mode = 0660
error_transport:
  driver = appendfile
  directory = /usr/local/var/spool/advancedfiltering/error
  mode = 0660
bounce_transport:
  driver = appendfile
  directory = /usr/local/var/spool/advancedfiltering/bounce
  mode = 0660

begin retry
*                      *           F,2h,15m; G,16h,1h,1.5; F,4d,6h

begin rewrite

begin authenticators
